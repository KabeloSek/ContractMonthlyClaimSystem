@model ContractMonthlyClaimSystem.Models.Register

<!--Linking external styling-->
<link rel="stylesheet" href="/css/index.css"/>


<div class="wel">
    <h1>Welcome</h1>
    <p>Fill in your details to register</p>
</div>

<form asp-action="Index" method="post" class="form-container">

    <div class="form-group">
        <label>Name:</label><br />
        <input type="text" asp-for="name" placeholder="Enter Name"/>
        <span asp-validation-for="name"/>
    </div>

    <div class="form-group">
        <label>Surname:</label><br />
        <input type="text" asp-for="surname" placeholder="Enter Surname" />
        <span asp-validation-for="surname" />
    </div>

    <div class="form-group">
        <label>Email:</label><br />
        <input type="email" asp-for="email" placeholder="Enter Email" />
        <span asp-validation-for="email"/>
    </div>

    <div class="form-group">
        <label>Password:</label><br />
        <input type="password" asp-for="password" placeholder="Password" />
        <span asp-validation-for="password"/>
    </div>

    <div class="form-group">
        <label>Role:</label><br />
        <select asp-for="role">
            <option value="Lecturer">Lecturer</option>
            <option value="Program Coordinator">Program Coordinator</option>
            <option value="Program Manager">Program Manager</option>
        </select>
        <span asp-validation-for="role" />
    </div>
    <br />

    <!-- Register styled link -->
    <button class="btn">Register</button>
</form>

<div class="login-prompt">
    <p>
        Already ?
        <a href="@Url.Action("Privacy","Home")">Login</a>
    </p>
</div>