@model ContractMonthlyClaimSystem.Models.Login
<!--Linking external styling-->
<link rel="stylesheet" href="/css/privacy.css" />


<div class="wel-Back">
    <h1>Welcome Back</h1>
    <p>Please login to continue</p>
</div>

<form asp-action="Privacy" method="post" class="form-container">
    <div class="form-group">
        <label>Email:</label><br />
        <input type="email" asp-for="email" placeholder="Enter email" />
        <span asp-validation-for="email"/>
    </div>

    <div class="form-group">
        <label>Password:</label><br />
        <input type="password" asp-for="password" placeholder="Enter password" />
    </div>

    <div class="form-group">
       <label>Role:</label><br/>
       <select asp-for="role">
            <option value="Lecturer">Lecturer</option>
            <option value="Program Coordinator">Program Coordinator</option>
            <option value="Program Manager">Program Manager</option>
       </select>
       <span asp-validation-for="role"/>
    </div>
    <br />

    <!--login link-->
    <button class="btn">Login</button>
</form>

<div class="register-prompt">
    <p>Don't have an account? <a href="@Url.Action("Index","Home")">Register</a></p>
</div>

<a href="@Url.Action("HomePg", "Home")" class="btn">HomePage</a>